<div style="width: 100%; display: flex; flex-direction:column; justify-content: center; align-items:center; background-color:white; margin: 0 auto;">    
  <% if(messages.length != 0){ %> 
      <div style="display:flex; flex-direction:column; align-items:center; width: 100%;">
          <div style="width: 90%; background-color: gray; display: flex; justify-content:space-evenly; align-items: center; padding: 5px 0">
              <div style="flex: 1; text-align:center; color: white;">date</div>
              <div style="flex: 4; text-align:center; color: white;">user</div>
              <div style="flex: 6; text-align:center; color: white;">message</div>
          </div>
          <% messages.forEach((message, index) => { %>

            <% if(index % 2 === 0){ %>
              <div style="background-color: lightgray; width: 90%;padding: 1px 0; display: flex; justify-content:space-evenly; align-items: center;">
                <div style="flex: 1; text-align:center; font-size: 12px; color:red;"><%= message.date %></div>
                <div style="flex: 4; text-align:center; font-size: 12px; color: blue;"><%= message.userEmail %></div>
                <div style="flex: 6; text-align:center; font-size: 12px; color: green;"><%= message.message %></div>  
              </div>
            <% } else { %>
              <div style="background-color: #e2e2dd; width: 90%;padding: 1px 0; display: flex; justify-content:space-evenly; align-items: center;">
                <div style="flex: 1; text-align:center; font-size: 12px; color:red;"><%= message.date %></div>
                <div style="flex: 4; text-align:center; font-size: 12px; color: blue;"><%= message.userEmail %></div>
                <div style="flex: 6; text-align:center; font-size: 12px; color: green;"><%= message.message %></div>  
              </div>
            <% } %>
          <% }) %> 
      </div>
  <% } else { %>
              <p>No hay mensajes disponibles</p>
  <% } %>
</div>